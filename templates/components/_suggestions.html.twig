<div class="col-md-4 col-sm-4 col-xs-12">
    <div class="spotlight-item-thumb">
        <div class="spotlight-item-thumb-img">
            <a href="{{ path('index_article', {
                categorie: article.categorie.slug,
                slug: article.slug,
                id: article.id,
                sourceId: article.sourceId
            }) }}">
                <img alt="{{ article.titre }}" src="{{ asset('images/product/'~article.featuredImage) }}">
            </a>
            <a href="{{ path('index_categorie', {
                slug: article.categorie.slug
            }) }}" class="cate-tag">{{ article.categorie.nom }}</a>
        </div>
        <h3><a href="{{ path('index_article', {
                categorie: article.categorie.slug,
                slug: article.slug,
                id: article.id,
                sourceId: article.sourceId
            }) }}">{{ article.titre | title }}</a></h3>
        <div class="meta-post">
            <a href="#">
                {{ article.membre.prenom ~ ' ' ~ article.membre.nom }}
            </a>
            <em></em>
            <span>
                {{ article.datecreation | date('d/m/Y') }}
            </span>
        </div>
    </div>
</div>